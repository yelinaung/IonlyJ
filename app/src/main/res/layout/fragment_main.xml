<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yelinaung.Ionleyj.MainActivity$PlaceholderFragment">

    <Button
        android:id="@+id/ion_download"
        android:text="@string/ion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/loopj_download"
        android:text="@string/loopj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ion_download" />

    <Button
        android:id="@+id/volley_download"
        android:text="@string/volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result"
        android:layout_toRightOf="@+id/loopj_download" />

    <Button
        android:id="@+id/clear"
        android:text="@string/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result"
        android:layout_toRightOf="@+id/volley_download" />

    <TextView
        android:id="@+id/result"
        android:layout_below="@id/ion_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
